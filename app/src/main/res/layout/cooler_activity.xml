<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bacooler">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        app:elevation="15dp"
        >
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کولر"
        android:background="@drawable/shape_button"
        android:id="@+id/cooler"
        android:layout_margin="7dp"
        android:layout_below="@+id/bokhari"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کولر ۱"
        android:background="@drawable/shape_button"
        android:id="@+id/cooler1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بخاری"
        android:background="@drawable/shape_button"
        android:id="@+id/bokhari"
        android:layout_margin="7dp"
        android:layout_below="@+id/cooler1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/note"
        android:id="@+id/statecb"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bokhari"
        android:layout_marginBottom="54dp" />
</RelativeLayout>