<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bahood">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        app:elevation="15dp"
        >
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هود ۱"
        android:id="@+id/hood1"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_button"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هود ۲"
        android:id="@+id/hood2"
        android:background="@drawable/shape_button"
        android:layout_below="@+id/hood1"

        android:layout_alignStart="@+id/hood1"
        android:layout_marginTop="7dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="برق اصلی"
        android:id="@+id/mainpower"
        android:background="@drawable/shape_button"
        android:layout_below="@+id/hood2"
        android:layout_marginTop="7dp"
        android:layout_alignStart="@+id/hood2" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/stateh"
        android:background="@drawable/note"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/mainpower"
        android:layout_marginBottom="46dp" />
</RelativeLayout>