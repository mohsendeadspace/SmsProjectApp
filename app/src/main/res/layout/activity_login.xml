<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smsproject.app.mastergame.com.smsproject.LoginActivity"
    android:background="@drawable/wallpaper"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        app:elevation="15dp"
        >

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00ffffff"
        android:layout_gravity="center"
        app:contentPadding="5dp"

        app:cardUseCompatPadding="true"
        android:alpha="0.8"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:rippleColor="#fafdff"
        android:id="@+id/cardone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp">



        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="11"
            android:id="@+id/edtphone"
            android:layout_marginTop="145dp"
            android:hint="شماره موبایل"
            android:textSize="15dp"
            android:background="@drawable/shape_three"
            android:textAlignment="textStart"
            android:layout_above="@+id/edtpassword"
            android:layout_centerHorizontal="true"
            android:alpha="1"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="30"
            android:layout_marginTop="195dp"
            android:id="@+id/edtpassword"
            android:hint="رمز عبور"
            android:textSize="15dp"
            android:background="@drawable/shape_three"
            android:textAlignment="textEnd"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/edttekrar" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="30"
            android:layout_marginTop="245dp"
            android:id="@+id/edttekrar"
            android:hint="تکرار رمز عبور"
            android:textSize="15dp"
            android:background="@drawable/shape_three"
            android:textAlignment="textEnd"
            android:layout_below="@+id/edtpassword"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="ثبت"
            android:id="@+id/btnregister"
            android:layout_below="@+id/edttekrar"
            android:layout_marginTop="310dp"
            android:background="@drawable/shape_two"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login"
            android:alpha="1"/>

    </android.support.v7.widget.CardView>



</RelativeLayout>
