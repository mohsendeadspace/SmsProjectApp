<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smsproject.app.mastergame.com.smsproject.MainActivity"
android:background="@drawable/back"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        app:elevation="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="ورود"
            android:layout_marginTop="15dp"
            android:id="@+id/txtvorod"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="15dp" />

    </android.support.v7.widget.Toolbar>




    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00ffffff"
        app:contentPadding="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:layout_marginTop="100dp"

        android:foreground="?android:attr/selectableItemBackground"
        app:rippleColor="#fafdff"
        android:layout_gravity="center"
        android:id="@+id/cardone"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/edtpas"
            android:layout_marginTop="10dp"
            android:alpha="1"
            android:layout_marginLeft="115dp"
            android:background="@drawable/lock"/>



        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="30"
            android:id="@+id/edtpas"
            android:layout_marginTop="104dp"
            android:background="@drawable/shape_three"
            android:textAlignment="textEnd"
            android:alpha="0.7"
            android:hint="رمز عبور"
            android:textSize="15dp"
            android:layout_alignTop="@+id/cardone"
            android:layout_centerHorizontal="true" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ورود"
            android:alpha="0.9"
            android:id="@+id/btnlogin"
            android:layout_marginTop="170dp"
            android:background="@drawable/shape_two"
            android:layout_below="@+id/edtpas"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ثبت اطلاعات"
            android:id="@+id/btninsert"
            android:alpha="0.9"
            android:background="@drawable/shape_two"
            android:layout_below="@+id/btnlogin"
            android:layout_marginTop="230dp"
            android:layout_centerHorizontal="true" />


    </android.support.v7.widget.CardView>



</RelativeLayout>
