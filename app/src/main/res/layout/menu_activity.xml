        app:rippleColor="#fafdff"
        android:id="@+id/cardtseven"
        android:layout_below="@+id/cardteight"
        android:layout_alignStart="@+id/cardfour">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="گاز"
            android:id="@+id/txtcarseven"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:id="@+id/imgcarseven"
            android:layout_marginLeft="47dp"
            android:layout_gravity="center"
            android:src="@drawable/gaztwo"
            />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#fff"
        app:cardElevation="5dp"
        app:contentPadding="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:rippleColor="#fafdff"



        android:id="@+id/cardtsix"
        android:layout_below="@+id/cardfour"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="آیفون"
            android:id="@+id/txtcarsix"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:layout_width="40dp"
